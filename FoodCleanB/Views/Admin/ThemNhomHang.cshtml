@model ThietBiBosch.Database.DanhMucThietBi

@{
    ViewBag.Title = "Admin - Thêm nhóm";
    Layout = "~/Views/Shared/LayoutShare.cshtml";
}

@using (Html.BeginForm("ThemNhomHang", "Admin", FormMethod.Post)) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Nhóm danh mục thiết bị</h4>
        <hr />
        @Html.ValidationSummary(false)
        <div class="form-group">
            <label class="control-label col-md-2">Nhập tên danh mục thiết bị </label>
            <div class="col-md-6">
                @Html.EditorFor(model => model.TenDMTB, new { htmlAttributes = new { @class = "form-control", @required = "" } })
                @Html.ValidationMessageFor(model => model.TenDMTB, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Thêm DMTB" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Quay lại", "NhomHang")
</div>

