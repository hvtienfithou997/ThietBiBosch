@model ThietBiBosch.Models.RegisterModel

@{
    ViewBag.Title = "Đăng ký tài khoản";
    Layout = "~/Views/Shared/LayoutLogin.cshtml";
}
<style>
    .googleCaptcha {
        text-align: center;
        display: flex;
        flex-direction: column;
        align-items: center;
    }
</style>

<h2>Đăng ký tài khoản</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.TenDangNhap, htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-12">
                @Html.EditorFor(model => model.TenDangNhap, new { htmlAttributes = new { @class = "form-control" } })
                <div>@Html.ValidationMessageFor(model => model.TenDangNhap, "", new { @class = "text-danger" })</div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-12">
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", @type = "text" } })
                <div>@Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })</div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.MatKhau, htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-12">
                @Html.PasswordFor(model => model.MatKhau, new { htmlAttributes = new { @class = "form-control" } })
                <div>@Html.ValidationMessageFor(model => model.MatKhau, "", new { @class = "text-danger" })</div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.XacNhanMatKhau, htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-12">
                @Html.PasswordFor(model => model.XacNhanMatKhau, new { htmlAttributes = new { @class = "form-control" } })
                <div>@Html.ValidationMessageFor(model => model.XacNhanMatKhau, "", new { @class = "text-danger" })</div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-1 col-md-12 googleCaptcha">
                <div class="g-recaptcha" data-sitekey="6LcCh94UAAAAAPSmVALQJIU4u5cqY218Vdl7y_Jv" data-callback="correctCaptcha"></div>
                <input type="text" id="CaptchaResponse" name="CaptchaResponse" hidden="" value="" />
                <div>@Html.ValidationMessageFor(model => model.CaptchaResponse, "", new { @class = "text-danger" })</div>
            </div>
        </div>
        

        <div class="form-group">
            <div class=" col-md-12">
                <input type="submit" value="Create" id="btnOk" class="btn btn-default" disabled />
            </div>
        </div>
    </div>
}
<script>
    var correctCaptcha = function(response) {
        
        if (response.length > 0) {
            document.getElementById('btnOk').disabled = false;
            document.getElementById('CaptchaResponse').value = response;
        }
    }
</script>
<div>
    @Html.ActionLink("Back to List", "Index")
</div>
